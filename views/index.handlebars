

<div class="container maincont pt-3">
<div class="row">
<div class="col-md-4">
    <h4 class="text-center">Eat These Burgers</h4>

<ul class="list-group">
  {{#each burgers}}

  {{#unless devoured}}
   <li class="list-group-item">
    <span class="float-left">{{this.burger_name}}

    </span> 
    <span class="float-right">
      <button data-burgerid="{{this.id}}" class="devour"></button>
    </span>
       

    
  </li>
      
    {{/unless}}

 
  {{/each}}
  </ul>

</div>
<div class="col-md-4 text-center">
    <div class="row justify-content-center"><h2 class="text-center" >Add a Burger</h2></div>
    <div class="row justify-content-center">
         <img class="mb-1" height="200" width="200" src="/assets/images/burgers.png" alt="burger image"> 
    </div>
   
    <form class="create-form d-block">

  <div class="form-group d-block pb-3">
    <div><label for="burger">Burger Name</label>
    </div>
    <div><input type="text" id="burger" name="bname" placeholder="Enter a burger name"></div>
    
  </div>  
  <div class="form-group row justify-content-center">
    <label for="restaurant">Restaurant Name</label>
  <select class="form-control w-75 text-align-center" id="restaurant">
      <option value="">Restaurant Name</option>
      <option value="1">McDonalds</option>
      <option value="2">Burger King</option>
      <option value="3">Wendy's</option>
      <option value="4">Sonic</option>
      <option value="5">Checkers</option>
      <option value="6">Red Robin</option>
      <option value="7">Five Guys</option>
    </select>
  </div>



  <button class="addbtn btn-warning " type="submit">Add Burger</button>
</form>

    
   
</div>
<div class="col-md-4 text-center">
    <h4>RIP Devoured Burgers</h4>

<ul class="list-group">
  {{#each burgers}}

  {{#if devoured}}
   <li class="list-group-item devoured">
    <p>
       {{this.burger_name}}

    
    </p>
  </li>
      
    {{/if}}

 
  {{/each}}
</ul>

    
</div>



</div>
</div>
















